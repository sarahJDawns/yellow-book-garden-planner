<%- include('partials/header-guest') %>

<main class="bg-bkgd font-body text-darkGray flex flex-col items-center justify-center w-full h-screen mx-auto">
  <section class="container flex flex-col">
    <div class="bg-lightYellow py-28 flex items-center justify-center w-full px-8 rounded-lg shadow-md">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="text-alert flex-col pb-3 mx-auto text-xl font-bold text-center">
        <%= el.msg %>
      </div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="text-alert pb-5 mx-auto text-xl font-bold text-center">
        <%= el.msg %>
      </div>
      <% }) %> <% } %>
      <form action="/login" method="POST" class="bg-accent md:w-1/2 w-full px-8 pt-6 pb-8 rounded shadow-md">
        <div class="pb-5 my-5">
          <h2 class="font-heading border-darkGray font-bold uppercase border-b">Sign in to your account</h2>
        </div>
        <div class="mb-4">
          <label class="font-heading block mb-2 text-sm font-bold" for="email">
            Email address
          </label>
          <input type="email" class="focus:shadow-outline caret-lightPurple border-darkGray focus:border-brightBlue focus:outline-none focus:bg-bkgd w-full px-3 py-2 leading-tight border rounded shadow appearance-none" id="email" name="email" placeholder="Email">
        </div>
        <div class="mb-6">
          <label class="font-heading block mb-2 text-sm font-bold" for="password">
            Password
          </label>
          <input type="password" class="focus:shadow-outline caret-lightPurple border-darkGray focus:border-brightBlue focus:outline-none focus:bg-bkgd w-full px-3 py-2 leading-tight border rounded shadow appearance-none" id="password" name="password" placeholder="******************">
        </div>
        <div class="flex flex-col py-5">
          <button type="submit" class="bg-darkPinkOrange hover:bg-vDarkPinkOrange text-lightGreen focus:outline-none focus:shadow-outline justify-center px-4 py-2 mb-4 font-bold rounded">
            Sign In!
          </button>
          <p class="pt-5 text-xs">Don't have an account yet?<a class="text-darkBlue hover:text-vDarkBlue inline-block ml-2 text-sm font-bold align-baseline" href="/signup">
              Sign up
            </a></p>
          <p class="text-xs">Want a demo first?
            <a class="text-darkBlue hover:text-vDarkBlue inline-block ml-2 text-sm font-bold align-baseline" href="javascript:bypassLogin()">
              Bypass Login
            </a>
          </p>
        </div>
      </form>
    </div>
  </section>
</main>

<%- include('partials/footer') -%>
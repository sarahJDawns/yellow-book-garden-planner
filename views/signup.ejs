<%- include('partials/header-guest') %>

<main class="bg-slate-100 flex flex-col items-center justify-center p-6 w-full mx-auto">
  <section class="container flex flex-col justify-center items-center p-6 sm:w-2/3 md:w-1/2">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="flex-col text-xl pb-3 text-red-700 font-bold mx-auto text-center">
      <%= el.msg %>
    </div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
    <div class="text-xl pb-5 text-red-700 font-bold mx-auto text-center">
      <%= el.msg %>
    </div>
    <% }) %> <% } %>
    <form action="/signup" method="POST" class="container w-full p-8">
      <div class="flex flex-col">
        <label for="userName" class="text-slate-700 my-3">User Name</label>
        <input type="text" class="bg-blue-50 caret-purple-600 px-4 py-3 rounded-full border-2 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100" id="userName" name="userName" />
      </div>
      <div class="flex flex-col mt-5">
        <label for="email" class="text-slate-700 mb-3">Email address</label>
        <input type="email" class="bg-blue-50 caret-purple-600 px-4 py-3 rounded-full border-2 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100" id="email" name="email" />
        <p class="text-xl py-8 text-slate-700 font-bold mx-auto text-center">
          We'll never share your email.
        </p>
      </div>
      <div class="flex flex-col mt-5">
        <label for="password" class="text-slate-700 mb-3">Password</label>
        <input type="password" class="bg-blue-50 caret-purple-600 px-4 py-3 rounded-full border-2 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100" id="password" name="password" />
      </div>
      <div class="flex flex-col mt-5">
        <label for="confirmPassword" class="text-slate-700 mb-3">Confirm Password</label>
        <input type="password" class="bg-blue-50 caret-purple-600 px-4 py-3 rounded-full border-2 border-cyan-800 focus:border-blue-500 focus:outline-none focus:bg-blue-100" id="confirmPassword" name="confirmPassword" />
      </div>
      <div class="flex flex-row mt-5  md:justify-center 
      md:items-center">
        <button type="submit" class="flex-flex-row w-full p-3 px-6 pt-2 mt-4 mx-auto font-bold text-slate-100 bg-cyan-600 rounded-full baseline hover:bg-cyan-700 md:justify-center md:items-center md:w-1/3">
          Submit
        </button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer') -%>